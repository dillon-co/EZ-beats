<div class="about container">
	<div class="row">
		<div class="col-md-4">
			<h2><%= @user.first_name%>'s Profile</h2>
			<%= image_tag @user.avatar.url(:medium), class: "img-responsive img-circle" %>
			<h3>Name: <%= @user.first_name%> <%= @user.last_name %></h3>
			<h3>Email: <%= @user.email%></h3>
			<section class="stats">
				<%= render 'users/stats' %>
				<%= render 'users/follow_form' if signed_in? %>
			</section>
		</div>
		<div class="col-md-8">
			<h1 class="eztitle">Saved Sounds<h1>
			<%= render 'layouts/savedsounds' %>
			<%# @mixes.each do |mix| %>
			<%#if post.user.followed_by?(current_user) || post.share_with == "public" || post.user == current_user %>
				<h2><%#= mix.title %></h2>
				<%# end %>
			<%# end %>
			<%# else %>
				<!-- This user hasn't made any songs. -->

			<%# render_activities(@activities, layout: :activity) %>

		</div>
	</div>
</div>
